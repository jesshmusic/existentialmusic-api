<%= form_with(model: dev_project, local: true, class: "space-y-4") do |form| %>
  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>
  <div>
    <%= form.label :subtitle, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :subtitle, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>
  <div>
    <%= form.label :excerpt, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :excerpt, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>
  <div>
    <%= form.label :slug, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :slug, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>
  <div>
    <%= form.label :link, class: "block text-sm font-medium text-gray-700" %>
    <%= form.url_field :link, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>
  <div>
    <%= form.label :thumbnail, class: "block text-sm font-medium text-gray-700" %>
    <%= form.file_field :thumbnail, class: "mt-1 block w-full" %>
  </div>
  <div>
    <%= form.label :gallery, class: "block text-sm font-medium text-gray-700" %>
    <%= form.file_field :gallery, multiple: true, class: "mt-1 block w-full" %>
  </div>
  <div>
    <%= form.label :content, class: "block text-sm font-medium text-gray-700" %>
    <%= form.rich_text_area :content, class: "mt-1 block w-full" %>
  </div>
  <div>
    <%= form.submit class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700" %>
  </div>
<% end %>
