<h1 class="text-3xl font-bold mb-6">Project Details</h1>
<p><strong>Title:</strong> <%= @dev_project.title %></p>
<p><strong>Subtitle:</strong> <%= @dev_project.subtitle %></p>
<p><strong>Excerpt:</strong> <%= @dev_project.excerpt %></p>
<p><strong>Slug:</strong> <%= @dev_project.slug %></p>
<p><strong>Link:</strong> <%= link_to @dev_project.link, @dev_project.link, class: 'text-blue-500 underline' if @dev_project.link.present? %></p>
<p><strong>Thumbnail:</strong></p>
<% if @dev_project.thumbnail.attached? %>
  <%= image_tag @dev_project.thumbnail.variant(resize_to_limit: [300, 300]), class: "rounded mb-4" %>
<% end %>
<p><strong>Gallery:</strong></p>
<div class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-4">
  <% @dev_project.gallery.each do |image| %>
    <%= image_tag image.variant(resize_to_limit: [300, 300]), class: "rounded" %>
  <% end %>
</div>
<p><strong>Content:</strong></p>
<div class="prose">
  <%= @dev_project.content.body if @dev_project.content.present? %>
</div>
<div class="mt-4 space-x-2">
  <%= link_to 'Edit', edit_dev_project_path(@dev_project), class: 'bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600' %>
  <%= link_to 'Back', dev_projects_path, class: 'bg-gray-300 text-gray-900 px-4 py-2 rounded hover:bg-gray-400' %>
</div>