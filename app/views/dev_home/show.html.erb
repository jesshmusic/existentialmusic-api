<h1 class="text-3xl font-bold mb-6">Developer Homepage</h1>
<p><strong>Title:</strong> <%= @dev_home.title %></p>
<p><strong>Description:</strong></p>
<div class="prose">
  <%= @dev_home.description.body if @dev_home.description.present? %>
</div>

<div class="mt-8">
  <h2 class="text-2xl font-semibold mb-2">Technologies</h2>
  <ul class="list-disc list-inside">
    <% @dev_home.technologies.each do |tech| %>
      <li><%= tech.name %></li>
    <% end %>
  </ul>
</div>

<div class="mt-8">
  <h2 class="text-2xl font-semibold mb-2">Clients</h2>
  <ul class="list-disc list-inside">
    <% @dev_home.clients.each do |client| %>
      <li><%= client.name %></li>
    <% end %>
  </ul>
</div>

<div class="mt-8">
  <h2 class="text-2xl font-semibold mb-2">Projects</h2>
  <ul class="list-disc list-inside">
    <% @dev_home.dev_projects.each do |project| %>
      <li><%= link_to project.title, dev_project_path(project), class: 'text-indigo-600 hover:underline' %></li>
    <% end %>
  </ul>
</div>

<div class="mt-6">
  <%= link_to 'Edit', edit_dev_home_path(@dev_home), class: 'bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600' %>
</div>